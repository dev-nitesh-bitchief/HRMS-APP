<script>

    function areFieldsFilled(fieldset) {
        debugger
        var allFieldsFilled = true;
        // Iterate through each input element within the fieldset
        $(fieldset).find(':input[required]').each(function () {
            console.log('inside filled fields function');
            // Check if the input is empty or not
            if ($(this).val() === '') {
                // If any input field is empty, set the flag to false
                allFieldsFilled = false;
                // Exit the loop early if any field is empty
                return false;
            }
        });
        return allFieldsFilled;
    }

    function goToStep(step) {
        debugger
        console.log('Going to step:', step);
        // Function to check if all fields in a fieldset are filled
        if (typeof step === 'number' && step >= 1 && step <= 6) {
            // Find the fieldset corresponding to the current step
            var currentFieldset = $("fieldset").eq(step - 2);
            console.log('Selected fieldset:', currentFieldset);
            // Check if all fields in the current fieldset are filled
            if (areFieldsFilled(currentFieldset)) {
                // All fields in the current fieldset are filled
                console.log('All fields in the current fieldset are filled.');
                // Hide all fieldsets
                $("fieldset").hide();
                // Show the fieldset corresponding to the step
                currentFieldset.show();
            } else {
                // Some fields in the current fieldset are not filled
                alert('Some fields in the current fieldset are not filled.');
                // Optionally, display an error message or handle the incomplete form
            }
        } else {
            console.error("Invalid step number:", step);
        }
    }

    $(document).ready(function () {

        var currentPage, nextPage, previousPage;
        var opacity;
        var current = 1;
        var steps = $("fieldset").length;

        setProgressBar(current);

        $(".next-step").click(function () {
            // Function to check if all fields in a fieldset are filled

            // Find the closest fieldset which represents the current page
            var currentPage = $(this).closest('fieldset');
            var nextPage = currentPage.next();

            // Check if all fields in the current fieldset are filled
            if (areFieldsFilled(currentPage)) {
                // All fields in the current fieldset are filled
                // Proceed to the next step
                $("#progressbar li").eq($("fieldset").index(nextPage)).addClass("active");
                currentPage.hide();
                nextPage.show();
                currentPage.animate({ opacity: 0 }, {
                    step: function (now) {
                        opacity = 1 - now;
                        currentPage.css({
                            'display': 'none',
                            'position': 'relative'
                        });
                        nextPage.css({ 'opacity': opacity });
                    },
                    duration: 500
                });
                setProgressBar(++current);
            } else {
                // Some fields in the current fieldset are not filled
                alert('Please Filled the this page before heading to next page');
            }
        });

        $(".previous-step").click(function () {

            currentPage = $(this).parent();
            previousPage = $(this).parent().prev();

            $("#progressbar li").eq($("fieldset")
                .index(currentPage)).removeClass("active");

            currentPage.hide();
            previousPage.show();

            currentPage.animate({ opacity: 0 }, {
                step: function (now) {
                    opacity = 1 - now;

                    currentPage.css({
                        'display': 'none',
                        'position': 'relative'
                    });
                    previousPage.css({ 'opacity': opacity });
                },
                duration: 500
            });
            setProgressBar(--current);
        });



        function setProgressBar(currentStep) {
            var percent = parseFloat(100 / steps) * currentStep;
            percent = percent.toFixed();
            $(".progress-bar")
                .css("width", percent + "%")
        }

        $(".submit").click(function () {
            return false;
        })
    });


